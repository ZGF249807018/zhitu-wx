<view class='chance-contact'>
  <view class='inputcont'>
    <input bindinput="watchcontact" placeholder='请输入新的联系人' value='{{inputcontent}}' placeholder-class="placeholderStyle"></input>
    <image src="{{imageUrl}}Modify-contact-cancel.png" wx:if="{{err}}" bindtap='clearcontent'></image>
  </view>
  <view class='ok'>
    <view bindtap='submit'>确定</view>
  </view>
</view>