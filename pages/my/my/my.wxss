.my {
  background: rgba(245, 245, 245, 1);
}

.my-top {
  width: 100%;
  height: 503rpx;
}

.head {
  position: relative;
  display: flex;
  padding: 63rpx 41rpx;
  box-sizing: border-box;
}
.head-login{
  width: 500rpx;
  height: 150rpx;
  color: white;
  font-size: 36rpx;
  text-align: left;
  line-height: 150rpx;
  padding-left: 10rpx;
}
.headjpg {
  position: relative;
}

.headjpg>image {
  width: 162rpx;
  height: 162rpx;
  border-radius: 162rpx;
}

.headjpg>view {
  position: absolute;
  width: 90rpx;
  height: 40rpx;
  border-radius: 45rpx;
  line-height: 40rpx;
  color: white;
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  bottom: 2px;
  left: 34rpx;
  text-align: center;
}

.head-font {
  font-size: 36rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: white;
  margin-left: 17rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}


.head-font>view:nth-of-type(2) {
  margin-top: 20rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
}

.head-direction {
  height: 170rpx;
  margin-left: 100rpx;
}

.head-direction>image {
  /* margin-top: 81rpx; */
  display: block;
  width: 16rpx;
  height: 30rpx;
  margin: 0 auto;
    position: absolute;
  top: 134rpx;
  right: 40rpx;
}

.head-icon {
  display: flex;
  background: white;
  width: 690rpx;
  height: 180rpx;
  margin: 0 auto;
  box-shadow: 0rpx 0rpx 30rpx 0rpx rgba(0, 0, 0, 0.06);
  border-radius: 16rpx;
}

.head-icon-child {
  display: flex;
  flex-direction: column;
  margin-left: 101rpx;
  margin-top: 26rpx;
}

.head-icon-child>image {
  width: 94rpx;
  height: 94rpx;
}

.head-icon-child>text {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #333;
}

.my-center {
  width: 690rpx;
  margin: 0 auto;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 0rpx 30rpx 0rpx rgba(0, 0, 0, 0.06);
  border-radius: 16rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.my-center-child {
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
  /* justify-content: space-between; */
  border-bottom: 1px solid #e0e0e0;
}

