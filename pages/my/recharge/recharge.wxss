page{
  height: 100%;
  background: #F5F5F5;
}
.recharge{
  width: 100%;
  background: #F5F5F5;
}
.recharge-header{
  padding: 30rpx;
  background: #ffffff;
}
.recharge-header>view:first-child{
  font-size:  28rpx;
  color: #A3A3A3;
  margin-bottom: 20rpx;
}
.recharge-header>view:last-child{
  font-size:  56rpx;
  color: #333333;
  display: flex;
  align-items: center;
}
.recharge-header>view:last-child>input{
  font-size:  56rpx;
  color: #333333;
  height: 2rem;
}
.recharge-header .pla{
  font-size:  36rpx;
  color: #ddd;
}
.recharge-line{
  height: 20rpx;
  background: #F5F5F5;
}
.recharge-bottom{
  padding: 30rpx;
  background: #ffffff;
}
.recharge-bottom>view:first-child{
  font-size:  28rpx;
  color: #A3A3A3;
  margin-bottom: 20rpx;
}
.recharge-bottom>view:last-child{
  display: flex;
  flex-wrap: wrap;
}
.recharge-bottom>view:last-child>view{
  height: 120rpx;
  width: 217rpx;
  box-sizing: border-box;
  border: 2rpx solid #E0E0E0;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #A3A3A3;
}
.recharge-bottom>view:last-child>view:nth-child(2){
  margin: 0 19rpx;
}
.recharge-bottom>view:last-child>view:nth-child(5){
  margin: 0 19rpx;
}
.recharge-bottom>view:last-child .action{
  border: 2rpx solid #96CFF9;
  color: #96CFF9;
}
.recharge-btn{
  display: flex;
  justify-content: center;
}
.recharge-btn button{
  margin-top: 210rpx;
  width: 550rpx;
  height: 88rpx;
  background: #2DA0F4;
  box-shadow: 0rpx 10rpx 30rpx #2DA0F4;
  text-align: center;
  line-height: 88rpx;
  color: #ffffff;
  font-size: 36rpx;
  border: none;
  border-radius: 44rpx;
}