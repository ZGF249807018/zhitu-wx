.balanceDetail{
  width: 100%;
}
.balanceDetail-list{
  padding: 30rpx;
  border-bottom:  1rpx solid #E0E0E0;
}
.balanceDetail-list-top{
  margin-bottom: 15rpx;
}
.balanceDetail-list-top,.balanceDetail-list-bottom{
  display: flex;
  justify-content: space-between;
}
.balanceDetail-list-top>text:first-child,.balanceDetail-list-bottom>text:last-child{
  color: #333333;
  font-size: 28rpx;
}
.balanceDetail-list-top>text:last-child{
  color: #8E8E8E;
  font-size: 28rpx;
}
.balanceDetail-list-bottom>text:first-child{
  color: #333333;
  font-size: 24rpx;
}
.balanceDetail-bottom{
  width: 100%;
  height: 100rpx;
  background: #F5F5F5;
  display: flex;
  justify-content: center;
  align-items: center;
}
.balanceDetail-bottom view image{
  width: 20rpx;
  height: 35rpx;
  margin-right: 20rpx;
}
.balanceDetail-bottom view text{
  color: #8E8E8E;
  font-size: 28rpx;
}