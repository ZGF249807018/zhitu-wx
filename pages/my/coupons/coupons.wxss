page{
  background: #f5f5f5;
}
.coupons{
  width: 100%;
}
.coupons-header{
  display: flex;
  background:#FFFFFF;
}
.coupons-header>view{
  width: 50%;
  height: 106rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #8E8E8E;
  font-size: 28rpx;
  border-bottom: 6rpx solid #E0E0E0;
}
.coupons-header .coupons-header-child{
  border-bottom: 6rpx solid #2DA0F4;
  color: #2DA0F4;
}
.coupons-content{
  padding: 30rpx;
  box-sizing: border-box;
  background: #F5F5F5;
  position: relative;
  /* height: calc( 100vh - 106rpx ); */
}
.coupons-content>image{
  position: fixed;
  right: 0;
  bottom: 240rpx;
  width: 148rpx;
  height: 260rpx;
  z-index: 5;
}
.coupons-content-list{
  display: flex;
  
  background-size: 100% 100%;
  margin-bottom: 30rpx;
  box-shadow: 0rpx 0rpx 30rpx #f8f8f8;
}
.coupons-content-list .coupons-content-list-left{
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  width: 230rpx;
  height: 230rpx;
  /* margin-left: 50rpx;
  margin-right: 90rpx; */
}
.coupons-content-list-left>view:first-child{
  color: #FFFFFF;
  font-size: 62rpx;
  margin-bottom:10rpx;
  display: flex;
  flex-wrap: nowrap; 
  }
.coupons-content-list-left>view:first-child>text{
  padding-top: 33rpx;
  box-sizing: border-box;
  color: #FFFFFF;
  font-size: 28rpx;
}
.coupons-content-list-left>view:last-child{
  color: #FFFFFF;
  font-size: 28rpx;
}
.coupons-content-list .coupons-content-list-right{
  padding:  30rpx;
  box-sizing: border-box;
}
.coupons-content-list-right>view:first-child{
  color: #333333;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  font-weight: bold;
}
.coupons-content-list-right>view:nth-child(2){
  color: #8E8E8E;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
.coupons-content-list-right>view:last-child{
  color: #FF5C59;
  font-size: 28rpx;
  font-weight: bold;
}
.coupons-content-list-right>view:last-child>text{
  color: #FF5C59;
  font-size: 28rpx;
  font-weight: bold;
  /* margin-left: 30rpx; */
}
.coupons-content-bottom{
  position: relative;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background: #F5F5F5;
  display: flex;
  justify-content: center;
  align-items: center;
}
.coupons-content-bottom  image{
  width: 20rpx;
  height: 35rpx;
  margin-right: 20rpx;
}
.coupons-content-bottom text{
  color: #8E8E8E;
  font-size: 28rpx;
}
.coupons-content-null{
  position: absolute;
  display: flex;
  flex-direction: column;
  justify-content: center;
  left: 0;
  right: 0;
  width: 560rpx;
  height: 560rpx;
  margin-left: auto;
  margin-right: auto;
  text-align: center;
  margin-top: 100rpx;
}
.coupons-content-null>image{
  width: 100%;
  height: 426rpx;
  margin-bottom: 50rpx;
}
.coupons-content-null>text{
  font-size: 28rpx;
  color: #8E8E8E;
}
.padding{
  padding: 0
}
.coupons-content-list-right image{
  width: 16rpx;
  height: 30rpx;
  margin-left: 30rpx;
  display: inline-block;
  margin-top: 6rpx;
  
}
.usecoupons{
  display: flex;
}
.grey{
  color: #8E8E8E!important
}
