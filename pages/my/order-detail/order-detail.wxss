.order-detail {
  background: #f5f5f5;
}

.order-detail-head {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 50rpx 30rpx 30rpx;
  background: #fff;
  box-sizing: border-box;
}

.order-detail-head-right {
  width: 70rpx;
  height: 80rpx;
  border: 1px dashed #333;
  margin-top: 15rpx;
}

.order-detail-head-right image {
  width: 70rpx;
  height: 80rpx;
  display: block;
}

.order-detail-head-left>view:nth-of-type(1) {
  font-size: 36rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: #f5402d;
}

.order-detail-head-left>view:nth-of-type(2) {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #333;
  margin-top: 20rpx;
}

.order-detail-center {
  margin-top: 20rpx;
  background: #fff;
  padding: 30rpx;
  box-sizing: border-box;
}

.order-detail-center>view:nth-of-type(1) {
  font-size: 28rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: #333;
  margin-top: 30rpx;
}

.order-detail-center>view:nth-of-type(2) {
  font-size: 28rpx;
  font-family: PingFangSC-Medium;
  font-weight: 400;
  color: #333;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
}

.order-detail-bottom {
  background: #fff;
  margin-top: 20rpx;
  /* margin-bottom: 120rpx; */
}

.order-detail-bottom-child {
  display: flex;
  border-bottom: 1px solid #e0e0e0;
  padding: 22rpx 0 25rpx 30rpx;
  box-sizing: border-box;
}

.order-detail-bottom-child>view:nth-of-type(1) {
  width: 140rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #8e8e8e;
}

.order-detail-bottom-child>view:nth-of-type(2) {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #333;
  margin-left: 100rpx;
}

.order-detail-bottom-child>view:nth-of-type(2)>text {
  display: inline-block;
}

.order-detail-bottom-child>view:nth-of-type(2)>text:nth-of-type(2) {
  margin-left: 9rpx;
}

.order-detail-bottom-child>view:nth-of-type(2)>text:nth-of-type(3) {
  margin-left: 9rpx;
}

.tabbar {
  /* position: fixed; */
  width: 100%;
  /* bottom: 0; */
  background: #2da0f4;
  height: 100rpx;
  line-height: 100rpx;
  margin-top: 20rpx;
}

.tabbar>view {
  width: 144rpx;
  height: 50rpx;
  margin: 0 auto;
  font-size: 36rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: #fff;
}
