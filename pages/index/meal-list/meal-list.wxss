.meal-list {
  position: relative;
  background-color: #f5f5f5;
  font-size: 28rpx;
  padding: 30rpx 0;
}

.meal-list radio {
  margin: 0;
  width: 52rpx;
  height: 52rpx;
}

.meal-list .meal-item {
  padding: 0 30rpx;
  margin-bottom: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  -ms-flex-pack: justify;
  justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
  -ms-flex-align: center;
  align-items: center;
  background-color: #f5f5f5;
}

.meal-list .meal-item .meal-data {
  background: #fff;
  -webkit-box-shadow: 0px 0px 30rpx 0px rgba(0, 0, 0, 0.06);
  box-shadow: 0px 0px 30rpx 0px rgba(0, 0, 0, 0.06);
  border-radius: 16rpx;
  margin-left: 30rpx;
  width: 610rpx;
  /* height:281rpx; */
}

.meal-list .meal-item .meal-data .meal-header {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  -ms-flex-pack: justify;
  justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
  -ms-flex-align: center;
  align-items: center;
  font-size: 30rpx;
  padding-left: 30rpx;
  border-bottom: 1px solid #e0e0e0;
  color: #333;
  padding: 30rpx;
}

.meal-list .meal-item .meal-data .meal-header .meal-header-name {
  color: #2da0f4;
  font-size: 28rpx;
}

.meal-list .meal-item .meal-data .meal-header .meal-header-name .meal-time {
  color: #8e8e8e;
  font-size: 28rpx;
  margin-left: 20rpx;
}

.meal-list .meal-item .meal-data .meal-header .meal-header-price {
  color: #f5402d;
  font-size: 28rpx;
}

.meal-list .meal-item .meal-data .meal-text {
  padding: 30rpx;
}

.meal-list .meal-item .meal-data .meal-text .meal-text-title {
  display: block;
  color: #333;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.meal-list .meal-item .meal-data .meal-text .meal-text-desc {
  display: block;
  color: #8e8e8e;
  line-height: 40rpx;
}

.meal-list .meal-item:last-of-type {
  margin-bottom: 0;
}
