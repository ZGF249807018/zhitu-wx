.content {
  text-align: center;
}
.content .swiper {
  height: 250rpx;
}
.content .swiper image {
  width: 100%;
  height: 250rpx;
}
.content .noticeBar {
  font-size: 28rpx;
  text-align: left;
  padding: 20rpx 0;
  padding-left: 50rpx;
}
.content .noticeBar .noticeBar-icon {
  width: 39rpx;
  margin-right: 20rpx;
  vertical-align: middle;
}
.content .bj-f5 {
  background-color: #F5F5F5;
  height: 20rpx;
}
.content .grid-nav {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
      -ms-flex-pack: justify;
          justify-content: space-between;
  padding: 20rpx 50rpx;
}
.content .grid-nav .nav-item {
  text-align: center;
}
.content .grid-nav .nav-item image {
  width: 70rpx;
  height: 70rpx;
}
.content .grid-nav .nav-item text {
  margin-top: 20rpx;
  font-size: 24rpx;
  display: block;
}
.content .meal {
  padding: 30rpx;
  text-align: left;
}
.content .meal .meal-title {
  display: block;
  color: #333333;
  font-weight: bold;
  font-size: 36rpx;
  font-family:PingFangSC-Semibold;
  
}
.content .meal .meal-item:nth-of-type(1){
  margin-top: 20rpx;
}
.content .meal .meal-item {
  position: relative;
  /* height: 160rpx; */
  -webkit-box-shadow: 0px 0px 30rpx 0px rgba(0, 0, 0, 0.06);
          box-shadow: 0px 0px 30rpx 0px rgba(0, 0, 0, 0.06);
  border-radius: 8rpx;
  margin-bottom: 30rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  /* padding-bottom: 30rpx; */
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
      -ms-flex-pack: justify;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
}
.content .meal .meal-item .meal-item-left .meal-more-icon {
  width: 20rpx;
  margin-left: 20rpx;
}
.content .meal .meal-item .meal-item-left .meal-item-title {
  color: #333333;
  font-weight: 600;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  /* padding-top: 30rpx; */
  /* box-sizing: border-box; */
  margin-top: 30rpx;
}
.content .meal .meal-item .meal-item-left .meal-item-desc {
  color: #8E8E8E;
  font-weight: 400;
  display: block;
  width: 453rpx;
  font-size: 28rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.content .meal .meal-item .meal-item-right {
  /* position: absolute;
  top: 17rpx;
  right: 30rpx; */
  /* padding-top: 30rpx;
  box-sizing: border-box; */
  text-align: center;
}
.content .meal .meal-item .meal-item-right .price {
  color: #F5402D;
  font-weight: bold;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  text-align: center;
}
.content .meal .meal-item .meal-item-right ._button {
  font-size: 24rpx;
  width: 144rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 30rpx;
  opacity: 0.6;
  background-color: #ffffff;
  color: #2DA0F4;
  border: 1rpx solid #2DA0F4;
  padding: 0;
  margin-top: 20rpx;
}
.content .meal .meal-item .sign-icon {
  position: absolute;
  top: 0;
  left: 50%;
  width: 130rpx;
}
.content .meal .meal-item .sign-icon image {
  width: 100%;
}
.content .meal :last-of-type {
  margin-bottom: 0;
}
.meal-item-left{
  border-right: 1px dashed #E0E0E0;
   padding-bottom: 30rpx;
   padding-right: 20rpx;
   box-sizing: border-box;
}
.content .meal .meal-item .meal-item-left .rotate{
  transform: rotate(180deg);
  transition: all .2s linear;
}
.open{
  display: block !important;
  transition: all  2s linear;
}