.login-phone {
  font-size: 28rpx;
}

.login-phone .login-phone-header image {
  width: 750rpx;
  height: 435rpx;
}

.login-phone .login-input {
  position: relative;
  padding: 0 80rpx;
  margin-bottom: 24rpx;
}

.login-phone .login-input .input-left-icon {
  position: absolute;
  left: 96rpx;
  top: 50%;
  width: 48rpx;
  -webkit-transform: translate(0, -50%);
  -ms-transform: translate(0, -50%);
  transform: translate(0, -50%);
}

.eyes {
  position: absolute;
  right: 51rpx;
  top: 27%;
  width: 80rpx;
  height: 80rpx;
}

.eyes>image {
  width: 30rpx;
}

.login-phone .login-input ._input {
  border-bottom: 1px solid #e0e0e0;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 50rpx 0 99rpx;
}

.login-phone .login-input .input-right-icon {
  position: absolute;
  right: 100rpx;
  top: 50%;
  z-index: 5;
  width: 30rpx;
  -webkit-transform: translate(0, -50%);
  -ms-transform: translate(0, -50%);
  transform: translate(0, -50%);
}

.login-phone .service-agreement {
  margin-top: 100rpx;
  font-size: 28rpx;
  text-align: center;
}
.login-phone .service-agreement view{
  color: #8E8E8E;
}
.login-phone .service-agreement text {
  color: #2da0f4;
}

.login-phone .sign-in ._button {
  background-color: #2da0f4;
  border-color: #2da0f4;
  font-size: 36rpx;
  color: #fff;
  width: 550rpx;
  height: 88rpx;
  line-height: 88rpx;
  margin: 40rpx auto 60rpx;
  border-radius: 88rpx;
  -webkit-box-shadow: 0px 10rpx 30rpx 0px rgba(45, 160, 244, 0.3);
  box-shadow: 0px 10rpx 30rpx 0px rgba(45, 160, 244, 0.3);
}

.login-phone .btns {
  width: 550rpx;
  margin: 0 auto;
  overflow: hidden;
}

.login-phone .btns .tor-registration {
  float: left;
  color: #2da0f4;
}

.login-phone .btns .forget-password {
  float: right;
  color: #8E8E8E;
}
