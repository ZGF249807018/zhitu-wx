.registration {
  position: relative;
  font-size: 28rpx;
}
.registration .registration-input {
  position: relative;
  padding: 0 30rpx;
  margin-top: 50rpx;
}
.registration .registration-input .input-left-icon {
  position: absolute;
  left: 46rpx;
  top: 50%;
  width: 48rpx;
  -webkit-transform: translate(0, -50%);
      -ms-transform: translate(0, -50%);
          transform: translate(0, -50%);
}
.registration .registration-input ._input {
  font-size: 28rpx;
  display: block;
  border-bottom: 1px solid #E0E0E0;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 50rpx 0 90rpx;
}
.registration .registration-input .input-right-icon {
  position: absolute;
  right: 100rpx;
  top: 50%;
  width: 30rpx;
  -webkit-transform: translate(0, -50%);
      -ms-transform: translate(0, -50%);
          transform: translate(0, -50%);
}
.registration .immediatelyRegistration ._button {
  background-color: #2DA0F4;
  border-color: #2DA0F4;
  font-size: 36rpx;
  color: #FFFFFF;
  width: 550rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 88rpx;
  margin: 0 auto;
  margin-top: 100rpx;
  -webkit-box-shadow: 0px 10rpx 30rpx 0px rgba(45, 160, 244, 0.3);
          box-shadow: 0px 10rpx 30rpx 0px rgba(45, 160, 244, 0.3);
}
.registration .service-agreement {
  color: #8E8E8E;
  padding-left: 50rpx;
  margin-top: 50rpx;
}
.registration .service-agreement radio {
  margin-right: 30rpx;
}
.registration .service-agreement text {
  color: #2DA0F4;
}
.registration .exist-login {
  color: #8E8E8E;
  text-align: center;
  margin-top: 50rpx;
}
.registration .exist-login text {
  color: #2DA0F4;
}
.modal {
  width: 180rpx;
  /* height: 180rpx; */
  padding: 30rpx 34rpx 32rpx 32rpx;
  box-sizing: border-box;
  background: rgba(0, 0, 0, 0.8);
  border-radius: 10rpx;
  position: fixed;
  z-index: 10;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: white;
  font-size: 28rpx;
}

.modal  image{
  width: 72rpx;
  height: 72rpx;
  display: block;
  margin: 0 auto;
  margin-top: 18rpx;
}
.modal>view:nth-of-type(2){
  margin-top: 18rpx;
}
.eyes {
  position: absolute;
  right: 51rpx;
  top: 27%;
  width: 80rpx;
  height: 80rpx;
  z-index: 5;
}

.eyes>image {
  width: 30rpx;
}
